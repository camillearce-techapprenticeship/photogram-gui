<h1> List of Users </h1>


<form action="/users/<%= @username %>">
  <label for="add_user"> Username </label>
  <input id="add_user" placeholder="Enter a username..." size="50px" name="username">
  <button>Add user </button>
</form>


<hr>
<table border="1">

<tr>
    <th>
      ID
    </th>

    <th>
      Username
    </th>

    <th></th>
</tr>

<% @list_of_users.each do |a_user| %>

<tr>
    <td>
      <%= a_user.id %>
    </td>

    <td>
      <%= a_user.username %>
    </td>

    <td>
      <a href="/users/<%= a_user.username %>">Show details</a>
    </td>
</tr>

<% end %>

</table>
